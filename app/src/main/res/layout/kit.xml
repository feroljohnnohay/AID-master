                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/item_name"
                        tools:layout_editor_absoluteX="225dp"
                        tools:layout_editor_absoluteY="54dp" />
                </LinearLayout>
